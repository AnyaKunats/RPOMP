<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fillColor="#C4C4C4" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">

        <TextView
                android:text=""
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_margin="30dp"
                android:gravity="top|center"/>
        <Button
                android:onClick="restart"
                android:text="RESTART"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button1"
                android:layout_margin="30dp"
                android:layout_gravity="center"/>
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TableRow android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center">
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt"
                        android:id="@+id/button2"
                        android:background="#F6F6F6"/>
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt" app:layout_row="0" app:layout_column="1"
                        android:id="@+id/button3"
                        android:background="#F6F6F6"/>
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt" app:layout_row="0" app:layout_column="2"
                        android:id="@+id/button4"
                        android:background="#F6F6F6"/>

            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt" app:layout_row="1" app:layout_column="0"
                        android:id="@+id/button5"
                        android:background="#F6F6F6"/>
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt" app:layout_row="1" app:layout_column="1"
                        android:id="@+id/button6"
                        android:background="#F6F6F6"/>
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt" app:layout_row="1" app:layout_column="2"
                        android:id="@+id/button7"
                        android:background="#F6F6F6"/>

            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt" app:layout_row="2" app:layout_column="0"
                        android:id="@+id/button8"
                        android:background="#F6F6F6"/>
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt" app:layout_row="2" app:layout_column="1"
                        android:id="@+id/button9"
                        android:background="#F6F6F6"/>
                <Button
                        android:onClick="buttonClick"
                        android:layout_margin="5dp"
                        android:layout_width="40pt"
                        android:layout_height="40pt" app:layout_row="2" app:layout_column="2"
                        android:id="@+id/button10"
                        android:background="#F6F6F6"/>
            </TableRow>
        </TableLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
